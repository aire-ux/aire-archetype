<archetype-descriptor
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="aire-component-quickstart">
    <requiredProperties>

        <!--
            properties without defaults
        -->
        <requiredProperty key="organization"/>
        <requiredProperty key="component-name"/>

        <!--
            properties with defaults
        -->

        <requiredProperty key="license">
            <defaultValue>MIT</defaultValue>
        </requiredProperty>
        <requiredProperty key="author">
            <defaultValue>${organization}</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
        </fileSet>
        <fileSet>
            <directory>src/test/java</directory>
        </fileSet>
        <fileSet filtered="true">
            <directory>bom</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="true">
            <directory>settings</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true">
            <directory>src</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet filtered="true">
            <directory/>
            <includes>
                <include>package.json</include>
            </includes>
        </fileSet>
    </fileSets>



</archetype-descriptor>
